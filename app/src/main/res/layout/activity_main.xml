<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_below="@id/LinearLayout_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            />

        <EditText
            android:id="@+id/input_field_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/text_view_1"
            android:layout_marginLeft="50dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:layout_below="@+id/input_field_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            />

        <EditText
            android:id="@+id/input_field_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/text_view_2"
            android:layout_marginLeft="50dp"
            android:inputType="textEmailAddress"
            />

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_below="@+id/input_field_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            />

        <EditText
            android:id="@+id/input_field_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/text_view_3"
            android:layout_marginLeft="50dp"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/text_view_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth"
            android:layout_below="@+id/input_field_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            />

        <EditText
            android:id="@+id/input_field_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/text_view_4"
            android:layout_marginLeft="50dp"
            android:inputType="date"
            />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_below="@+id/input_field_4"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            android:onClick="goToThankYouActivity"
            />

        <TextView
            android:id="@+id/text_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/david_prismantas"
            android:layout_below="@+id/button_1"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:id="@+id/text_view_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_4_28_2020"
            android:layout_below="@+id/text_view_5"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="100dp"
            />
    </LinearLayout>



</RelativeLayout>